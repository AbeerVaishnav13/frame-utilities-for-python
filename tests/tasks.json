{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Package",
            "type": "shell",
            "command": "python3 -m build"
        },
        {
            "label": "Upload Package",
            "type": "shell",
            "command": "python3 -m twine upload --repository pypi dist/*"
        },
        {
            "label": "Update Tools",
            "type": "shell",
            "command": "python3 -m pip install --upgrade pip build twine"
        }
    ]
}